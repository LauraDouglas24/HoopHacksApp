<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@android:color/white"
    tools:context=".EnterResults"
    tools:showIn="@layout/activity_enter_results">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Exercise Name"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@+id/tvTitle"
            android:id="@+id/tvEnterResult"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textColor="#808080"
            android:textSize="16sp"
            android:text="Enter Result for Exercise where applicable :"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEnterResult"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="Result:"/>

        <EditText
            android:id="@+id/etResult"
            android:layout_toRightOf="@+id/tvResult"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tvEnterResult"
            />

        <Button
            android:id="@+id/bSubmit"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/whitebutton"
            android:layout_marginStart="115dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="5dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/etResult"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>