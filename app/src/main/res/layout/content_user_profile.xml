<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hoophacks.hoophacks3.UserProfile"
    tools:showIn="@layout/activity_user_profile">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="24sp"
            android:text="My Profile"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvFirstNameData"
            android:layout_alignBottom="@+id/tvFirstNameData"
            android:layout_toStartOf="@+id/tvFirstNameData"
            android:text="First Name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFirstNameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvSurnameData"
            android:layout_alignStart="@+id/bUpdateProfile"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:hint="First Name"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:id="@+id/tvSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvSurnameData"
            android:layout_alignBottom="@+id/tvSurnameData"
            android:layout_toStartOf="@+id/tvFirstNameData"
            android:text="Surname"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSurnameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvAgeData"
            android:layout_alignStart="@+id/tvFirstNameData"
            android:layout_marginBottom="11dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:hint="Surname"
            android:inputType="text"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvSurname"
            android:layout_below="@+id/tvSurnameData"
            android:text="Age"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAgeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvHeightData"
            android:layout_alignStart="@+id/tvSurnameData"
            android:layout_marginBottom="17dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvHeightData"
            android:layout_alignEnd="@+id/tvFirstName"
            android:text="Height (cms)"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeightData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvWeightData"
            android:layout_alignStart="@+id/tvAgeData"
            android:layout_marginBottom="17dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:hint="Height in cms"
            android:inputType="numberDecimal"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="59dp" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/tvGenderData"
            android:layout_alignEnd="@+id/tvGender"
            android:layout_marginBottom="12dp"
            android:text="Weight (lb)"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWeightData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvWeight"
            android:layout_alignStart="@+id/tvHeightData"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:hint="Weight"
            android:inputType="numberDecimal"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="7dp" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvSkill"
            android:layout_alignTop="@+id/tvGenderData"
            android:text="Gender"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGenderData"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvSkill"
            android:layout_alignStart="@+id/tvWeightData"
            android:layout_marginBottom="9dp"
            android:text="Gender Here"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvSkillData"
            android:layout_toStartOf="@+id/bUpdateProfile"
            android:text="Skill Set"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSkillData"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bUpdateProfile"
            android:layout_alignStart="@+id/tvGenderData"
            android:layout_marginBottom="14dp"
            android:text="Skill Set Here"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/bUpdateProfile"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="115dp"
            android:background="@drawable/button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Update Profile"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/ic_launcher" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
