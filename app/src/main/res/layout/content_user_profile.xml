<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@android:color/white"
    tools:context="com.hoophacks.hoophacks3.UserProfile"
    tools:showIn="@layout/activity_user_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/open_sans"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="My Profile"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:fontFamily="@font/open_sans"
            android:paddingBottom="15dp"
            android:paddingLeft="100dp"
            android:paddingRight="15dp"
            android:text="First Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFirstNameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvFirstName"
            android:layout_toRightOf="@id/tvFirstName"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:fontFamily="@font/open_sans_light"
            android:hint="First Name"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFirstName"
            android:fontFamily="@font/open_sans"
            android:paddingBottom="15dp"
            android:paddingLeft="100dp"
            android:paddingRight="15dp"
            android:text="Last Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLastNameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvLastName"
            android:layout_toRightOf="@id/tvLastName"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:fontFamily="@font/open_sans_light"
            android:hint="Surname"
            android:inputType="text"
            android:lineSpacingExtra="14sp"
            android:paddingLeft="5dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLastName"
            android:layout_toStartOf="@+id/tvLastNameData"
            android:fontFamily="@font/open_sans"
            android:paddingBottom="15dp"
            android:paddingLeft="100dp"
            android:paddingRight="15dp"
            android:text="Age"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAgeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAge"
            android:layout_toRightOf="@id/tvAge"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:fontFamily="@font/open_sans_light"
            android:hint="Age"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAge"
            android:fontFamily="@font/open_sans"
            android:paddingBottom="15dp"
            android:paddingLeft="100dp"
            android:paddingRight="15dp"
            android:text="Height (cm)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeightData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvHeight"
            android:layout_toRightOf="@id/tvHeight"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:fontFamily="@font/open_sans_light"
            android:hint="Height in cms"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeight"
            android:layout_toStartOf="@+id/tvFirstNameData"
            android:fontFamily="@font/open_sans"
            android:paddingBottom="15dp"
            android:paddingLeft="100dp"
            android:paddingRight="15dp"
            android:text="Weight (lb)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWeightData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvWeight"
            android:layout_toRightOf="@id/tvWeight"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:ems="10"
            android:fontFamily="@font/open_sans_light"
            android:hint="Weight"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWeight"
            android:layout_toStartOf="@+id/tvAgeData"
            android:fontFamily="@font/open_sans"
            android:paddingBottom="15dp"
            android:paddingLeft="100dp"
            android:paddingRight="15dp"
            android:text="Gender"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGenderData"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvGender"
            android:layout_toRightOf="@id/tvGender"
            android:fontFamily="@font/open_sans_light"
            android:paddingLeft="5dp"
            android:text="Gender Here"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGender"
            android:layout_toStartOf="@+id/tvGenderData"
            android:fontFamily="@font/open_sans"
            android:paddingBottom="15dp"
            android:paddingLeft="100dp"
            android:paddingRight="15dp"
            android:text="Skill Set"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSkillData"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvSkill"
            android:layout_toRightOf="@id/tvSkill"
            android:fontFamily="@font/open_sans_light"
            android:paddingLeft="5dp"
            android:text="Skill Set Here"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bUpdateProfile"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tvSkill"
            android:layout_marginTop="20dp"
            android:background="@drawable/whitebutton"
            android:fontFamily="@font/open_sans"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="125dp"
            android:paddingBottom="4dp"
            android:text="Update Profile"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
